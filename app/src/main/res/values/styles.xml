<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">@color/검회색글자</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="popupTheme1" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@android:color/widget_edittext_dark</item>
        <item name="android:itemBackground">@color/회색</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>


</resources>
