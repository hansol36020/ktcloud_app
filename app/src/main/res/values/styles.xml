<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">13sp</item>
        <item name="android:actionMenuTextAppearance">@style/popupTheme1</item>
    </style>

    <style name="popupTheme1">
        <item name="android:textColor">@android:color/widget_edittext_dark</item>
        <item name="android:itemBackground">@color/회색</item>
        <item name="android:textSize">10sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>


</resources>
